# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.HomeController.index(request: play.mvc.Http.Request)

# Static resources
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# YouTube analytics
GET     /ytlytics                   controllers.HomeController.ytlytics(request: play.mvc.Http.Request, query: java.util.Optional[String])

# Channel videos
GET     /ytlytics/channel/:channelId controllers.HomeController.channelVideos( channelId: String)

# Word statistics
GET     /wordStatistics/:searchQuery controllers.HomeController.wordStats(searchQuery: String)

# Tag analytics
GET     /ytlytics/tags/:query       controllers.HomeController.taglytics(query: String)
