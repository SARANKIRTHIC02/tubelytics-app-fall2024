# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# Home Controller
# Serve the WebSocket server
GET     /ws                controllers.HomeController.ytlyticsWebSocket

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# WebSocket endpoint for real-time communication
GET     /ytlytics       controllers.HomeController.ytlytics
GET     /channel/:id              controllers.HomeController.channelProfile(id: String)


# Word statistics for a specific search query
#GET     /wordStats/:query            controllers.HomeController.wordStats(query: String)

# Videos from a specific channel
#GET     /channelVideos/:channelId    controllers.HomeController.channelVideos(channelId: String)

# Tag-specific analytics
#GET     /taglytics/:tag              controllers.HomeController.taglytics(tag: String)

